  </head>
  <body>
    <div>
      <nav class="navbar navbar-default navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">
          <img src="/img/Rozgaar-logo.png" width="30" height="25"
        /></a>

        <a class="navbar-brand" id="lol" href="/">Roz<b>GAAR</b></a>
        <button
          type="button"
          class="navbar-toggler"
          data-toggle="collapse"
          data-target="#navbarCollapse"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          id="navbarCollapse"
          class="navbar-collapse justify-content-start collapse in"
          aria-expanded="true"
        >
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a
                href="#about"
                onclick="document.getElementById('modal-wrapper').style.display='block'"
                class="nav-link"
                id="node"
                >About</a
              >
            </li>
            <li class="nav-item">
              <a href="#contact/to/us" class="nav-link" id="node">Contact</a>
            </li>
            <li class="nav-item">
              <a href="/users/dashboard" class="nav-link" id="node"
                >Dashboard</a
              >
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right ml-auto">
            <li class="nav-item">
              <a
                class="btn btn-primary dropdown-toggle get-started-btn mt-1 mb-1"
                id="lop"
                href="/users/profile"
                aria-expanded="false"
                style="text-align: center"
                >Profile</a
              >
              <a
                class="btn btn-primary dropdown-toggle get-started-btn mt-1 mb-1"
                id="lop"
                href="/auth/logout"
                aria-expanded="false"
                style="text-align: center"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="container">
      <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
          <div class="stepwizard-step">
            <a style="color: rgba(232, 243, 234);" href="#step-1" type="button" class="btn btn-primary btn-circle"
              >|</a
            >
            <p>Step 1</p>
          </div>
          <div class="stepwizard-step">
            <a style="color: rgba(232, 243, 234)";

              href="#step-2"
              type="button"
              class="btn btn-default btn-circle"
              disabled="disabled"
              >|</a
            >
            <p>Step 2</p>
          </div>
          <div class="stepwizard-step">
            <a style="color: rgba(232, 243, 234)";
              href="#step-3"
              type="button"
              class="btn btn-default btn-circle"
              disabled="disabled"
              >|</a
            >
            <p>Step 3</p>
          </div>
        </div>
      </div>
      <form  action="/users/newjobs/jobs" method="POST" id="jobFormD">
        <div class="row setup-content" id="step-1">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3 class="aj1">Step 1</h3>
              <div class="form-group">
                <label class="jobslabel"
                  >Choose the Job Title</label
                >
                <div >
                  <input type="radio" id="checkbox" name="jobType" value="painter" checked  />
                  <label for="checkbox" style="color: rgba(232, 243, 234);"><span>Painter</span></label>
                </div>

                <div >
                  <input
                    type="radio"
                    id="checkbox2"
                    value="watchman"
                    name="jobType"                   />
                  <label for="checkbox2" style="color: rgba(232, 243, 234);"><span>Watchman</span></label>
                </div>
                <div >
                  <input
                    type="radio"
                    id="checkbox3"
                    value="gardener"
                    name="jobType" 
                  />
                  <label for="checkbox3" style="color: rgba(232, 243, 234);"><span>Gardener</span></label>
                </div>

                <div  >
                  <input
                    type="radio"
                    id="checkbox4"
                    value="maid"
                    name="jobType" 
                  />
                  <label for="checkbox4" style="color: rgba(232, 243, 234);"><span>Maid</span></label>
                </div>
              </div>
            
          </div>
          <button
          style="margin-left: 15px;"
          class="btn btn-3 mar-btn-1 nextBtn btn-lg pull-right"
          type="button"
        >
          Next
        </button>
        </div>
        
      </div>
        </div>
        <div class="row setup-content" id="step-2">
          <div class="col-xs-12">
            <div class="col-md-12">
              <h3 class="aj2">Step 2</h3>
              
              <div class="form-group">
                <label class="control-label">Describe the position</label>
                <textarea style="height: 130px;width: 550px;font-size: 15px;color: #254e58;"
                  maxlength="200"
                  type="text"
                  required="required"
                  name='jd'
                  class="form-control"
                  placeholder="Description"
                ></textarea>
              </div>
              <div>
              <button 
                class="btn btn-3 mar-btn-2 btn-4 nextBtn btn-lg pull-right"
                type="button"
              >
                Next
              </button>
            </div>
            </div>
            
          </div>
        </div>
        <div class="row setup-content" id="step-3">
          <div class="col-xs-12">
            <div class="col-md-12 xx">
              <h3 class="aj3">Step 3</h3>
              <div class="form-group">
                <div>
                <label class="jobslabel3"
                  >Final Submit?<br> Remenber that you cannot create multiple job openings of same type.</label
                ></div>
              <div>
              <button
              class="btn btn-3  btn-5 hara btn-lg pull-right" style="margin-bottom: 170px;"  id='jobSubmitD'  type="submit"
              >
                Finish
              </button>
            </div>
            </div>
            
          </div>
        </div>
      </form>
    </div>
    <script src="public/js/post_job.js"></script>
    <div id="modal-wrapper" class="modal">
      <form class="modal-content animate">
        <h3 style="color: #254e58">Who Are We</h3>
        <br />

        <span
          onclick="document.getElementById('modal-wrapper').style.display='none'"
          class="close"
          title="Close PopUp"
          >&times;</span
        >
      </form>
    </div>
    <div id="modal-wrapper1" class="modal">
      <form class="modal-content animate" id="m1">
        <h3 style="color: #254e58">Terms and Conditions</h3>
        <h4>Welcome to RozGAAR!</h4>
        <span
          onclick="document.getElementById('modal-wrapper1').style.display='none'"
          class="close"
          title="Close PopUp"
          >&times;</span
        >
      </form>
    </div>

    <button onclick="topFunction()" id="myBtn" title="Go to top">
      <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </button>
    <footer class="footer1" id="contact/to/us">
      <div class="container">
        <div class="row">
          <div class="col-xl-4">
            <a href="https://github.com/avasthiayush" style="color: #254e58"
              ><i class="fa fa-github" aria-hidden="true"></i> Visit us
            </a>
          </div>
          <div class="col-xl-4">
            <a
              href="https://mail.google.com/mail/?view=cm&fs=1&to=xyz@gmail.com&su=SUBJECT&body=BODY"
              style="color: #254e58"
              ><i
                class="fa fa-envelope"
                aria-hidden="false"
                style="color: #254e58"
              ></i>
              Mail us for any query</a
            >
          </div>
          <div class="col-xl-4">
            <a
              href="#terms&conditions"
              onclick="document.getElementById('modal-wrapper1').style.display='block'"
              style="color: #254e58"
              ><i
                class="fa fa-laptop"
                aria-hidden="false"
                style="color: #254e58"
              ></i>
              Terms &amp; Conditions</a
            >
          </div>
        </div>
      </div>
    </footer>
    <footer class="footer2">
      <div class="container">
        <div class="row">
          <div class="col-xl-12">Copyright © 2020 Creative_Crew</div>
        </div>
      </div>
    </footer>
