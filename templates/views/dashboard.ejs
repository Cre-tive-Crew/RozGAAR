  <div class="row r">
    <% if(user.type=="worker") {%>
     <% jobs.forEach( (job)=>{%>

      <div class="boxx">
      <div class="element effect7">
        <div class="front7">
          

          <img src= <%= `/img/${job.jobType}.jpg` %> style="filter: blur(3px); width: 100%; height: 100%;">
          <div class="container contt" style="text-shadow: 0px 0px 5px rgb(60, 60, 236);">
            <div class="job-title-name-worker">
            <%= job.jobType %>
            </div>
            
            <div class="job-Address"><h4>Address:</h4><p><%= job.ownerAddress %></p></div>
          </div>
        </div>
    
        <div class="back7">
          <div class="back-content">
            <div><h4 style="color: white;">NAME : </h4><p style="font-size: 15px;  text-transform: capitalize;">
              <%= job.ownerName %></p></div>
            <div><h4 style="color: white;">CONTACT : </h4><p style="font-size: 15px;"> <%= job.contact %></p></div>
            
            <div><h4 style="color: white;">EMAIL ADDRESS : </h4><p style="font-size: 15px;"> <%= job.email %></p></div>
          </div>
        </div>
      </div>
    </div> 
    <%}) %>  
    <%}else {%>
    <% users.forEach( (worker)=>{%>
      
      <div class="boxx">
        <div class="element effect7">
          <div class="front7">
            <img src=<%= worker.thumbnail %>  style="filter: blur(3px); width: 100%; height: 100%;">
            <div class="container contt" style="text-shadow: 0px 0px 5px rgb(60, 60, 236);">
              <div class="job-title-name-worker">
                <%= worker.username %>
              </div>
              
              <div class="job-Address"><h4>Address:</h4><p>
                <%= worker.address %></p></div>
            </div>
          </div>
      
          <div class="back7">
            <div class="back-content">
              <div><h4 style="color: white;">NAME : </h4><p style="font-size: 15px;">
               <%= worker.username %>
              </p></div>
              <div><h4 style="color: white;">CONTACT : </h4><p style="font-size: 15px;">
                <%= worker.contact1 %>
              </p></div>
              
              <% if(worker.contact2) {%>
                <div><h4 style="color: white;"> SECONDARY CONTACT  : </h4><p style="font-size: 15px;">
                  <%= worker.contact2 %>
                </p></div>  
              <%}%>


              <div><h4 style="color: white;">EMAIL ADDRESS : </h4><p style="font-size: 15px;">
                <%= worker.email %>
              </p></div>
            </div>
          </div>
        </div>
      </div> 

    <%}) %>       
    <%}%>

